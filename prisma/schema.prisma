generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int               @id @default(autoincrement())
  name        String
  description String
  price       Decimal
  brandId     Int
  brand       Brand             @relation(fields: [brandId], references: [id])
  categories  ProductCategory[]
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  OrderItem   OrderItem[]
}

model Brand {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  products    Product[]
}

model Category {
  id          Int               @id @default(autoincrement())
  name        String
  description String
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  products    ProductCategory[]
}

model ProductCategory {
  productId  Int
  categoryId Int
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@id([productId, categoryId], name: "productId_categoryId")
}

model Role {
  id        Int        @id @default(autoincrement())
  authority String     @unique
  users     UserRole[]
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  fullName  String
  cpf       String     @unique
  birthDate DateTime
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  roles     UserRole[]
  orders     Order[]
}

model UserRole {
  userId Int
  roleId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role   Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@id([userId, roleId], name: "userId_roleId")
}

model Order {
  id     Int      @id @default(autoincrement())
  userId Int
  amount Decimal
  moment DateTime @default(now())
  items  OrderItem[]

  user User @relation(fields: [userId], references: [id])
}

model OrderItem {
  productId Int
  orderId   Int
  quantity  Int
  price     Decimal

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  @@id([productId, orderId], name: "productId_orderId")
}
